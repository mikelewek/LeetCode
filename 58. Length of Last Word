public class Solution {
    public int LengthOfLastWord(string s) {
        
        int max = 0;
        int spaceCount = 0;
        int spaceEndCheck = 1;
        
        for(int i = s.Length - 1; i >= 0; i--)
        {           
            if (s[s.Length - spaceEndCheck] == ' ') 
            {
                spaceEndCheck++;
                continue;
            }
            
            if(s[i] == ' ')
            {
                spaceCount++;        
                
                if(spaceCount == 1)
                {
                    break;
                }              
            }
            
            max++;
        }
        
        return max;
    }
}
