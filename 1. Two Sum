// brute force
public class Solution {
    public int[] TwoSum(int[] nums, int target) {
        int first = 0;
        int second = 0;

        if (nums.Length == 0)
        {
            return new int[] { 0, 0 };
        }

        for (int i = 0; i < nums.Length; i++)
        {
            int complement = target - nums[i];

            for (int j = i + 1; j < nums.Length; j++)
            {
                if (nums[i] + nums[j] == target)
                {
                    first = i;
                    second = j;
                    break;
                }  
            }
            
            if (second > 0)
                {
                    break;
                }
        }

        return new int[] { first, second };
    }
}
